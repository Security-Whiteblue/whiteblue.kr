	<meta name = "keywords" content="Security Whiteblue">
	<meta name="description" content="Security Whiteblue">
	<meta property="og:title" content="Security Whiteblue">
	<meta property="og:url" content="">
	<meta property="og:description" content="Security Whiteblue">
	<!-- bootstrap -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
	<!-- stylesheet css -->
	<link rel="stylesheet" href="css/main.css">
	<script type="text/javascript">
		function check(id){
			if (id.usr.value.length == 0){ alert("Username spaces."); id.usr.focus(); return false; }
			if (id.email.value.length == 0){ alert("Email spaces."); id.email.focus(); return false; }
			if (id.pwd.value.length == 0){ alert("Password spaces."); id.pwd.focus(); return false; }
			if (id.pwdc.value.length == 0){ alert("re-enter Password spaces."); id.pwdc.focus(); return false; }
			if (id.pwd.value != id.pwdc.value){ alert("Password does not match."); id.pwdc.focus(); return false; }
		}
	</script>
</head>
<body data-spy="scroll" data-target=".navbar-collapse">
	
	<%-include('tags/alert')%>

	<%-include('tags/nav')%>

	<%-include('tags/header')%>

	<div class="main">
		<!-- register section -->
		<section class="register">
			<div class="container">
				<div class="row">
					<div class="col-md-6 offset-md-3">
						<div class="register_form">
							<p>회원가입</p>
							<form name="register_form" action="/register" method="post" onsubmit="return check(this)">
								<div class="username">
									<i class="bi bi-person-plus"></i>&nbsp;&nbsp;<input type="text" name="usr" id="usr" placeholder="Username" style="width: 85%;">
								</div>
								<div class="email">
									<i class="bi bi-envelope"></i>&nbsp;&nbsp;<input type="email" name="email" id="email" placeholder="Email" style="width: 85%;">
								</div>
								<div class="password">
									<i class="bi bi-file-lock"></i>&nbsp;&nbsp;<input type="password" name="pwd" id="pwd" placeholder="Password" style="width: 85%;">
								</div>
								<div class="password">
									<i class="bi bi-file-lock"></i>&nbsp;&nbsp;<input type="password" name="pwdc" id="pwdc" placeholder="re-enter Password" style="width: 85%;">
								</div>
								<div class="register_btn">
									<input type="submit" value="회원가입" style="width: 100%;">
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>

	<%-include('tags/footer')%>
	
</body>
</html>